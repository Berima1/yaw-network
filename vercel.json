{
  "version": 2,
  "name": "yaw-network-frontend",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "@yaw-api-url",
    "REACT_APP_NETWORK": "african-mainnet"
  },
  "regions": ["iad1", "fra1", "hnd1"],
  "github": {
    "silent": true
  }
}
