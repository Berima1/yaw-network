{
  "name": "yaw-network-african-blockchain",
  "version": "1.0.0-african-genesis",
  "description": "Revolutionary African Blockchain Network - Ubuntu Technology for Global Impact",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'No build step required - Node.js ready!' && exit 0",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "deploy:render": "git push origin main",
    "deploy:railway": "railway up",
    "docker:build": "docker build -t yaw-network .",
    "docker:run": "docker run -p 3000:3000 yaw-network",
    "cluster": "node server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "health": "curl http://localhost:3000/health",
    "stats": "node -e \"console.log('🌍 Ubuntu Stats:', JSON.stringify(process.memoryUsage(), null, 2))\""
  },
  "keywords": [
    "blockchain",
    "africa",
    "ubuntu",
    "cryptocurrency",
    "defi",
    "web3",
    "fintech",
    "quantum-resistant",
    "consensus",
    "african-innovation"
  ],
  "author": {
    "name": "Yaw Network Team",
    "email": "team@yawnetwork.org",
    "url": "https://yawnetwork.org"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yaw-network/yaw-blockchain.git"
  },
  "homepage": "https://yawnetwork.org",
  "bugs": {
    "url": "https://github.com/yaw-network/yaw-blockchain/issues"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^6.10.0",
    "jsonwebtoken": "^9.0.2",
    "crypto": "^1.0.1",
    "cluster": "^0.7.7",
    "winston": "^3.10.0",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "joi": "^17.9.2",
    "morgan": "^1.10.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "eslint": "^8.47.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "@types/node": "^20.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": "warn",
      "prefer-const": "error"
    }
  },
  "nodemonConfig": {
    "watch": ["server.js", "src/", "routes/", "middleware/"],
    "ext": "js,json",
    "ignore": ["node_modules/", "logs/", "coverage/"],
    "delay": "2000",
    "env": {
      "NODE_ENV": "development"
    }
  },
  "config": {
    "port": 3000,
    "host": "0.0.0.0"
  },
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/yaw-network"
  },
  "cpu": ["x64", "arm64"],
  "os": ["linux", "darwin", "win32"],
  "preferGlobal": false,
  "private": false,
  "publishConfig": {
    "access": "public"
  }
  }
